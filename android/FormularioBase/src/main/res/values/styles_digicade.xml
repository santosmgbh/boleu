<resources>

    <!-- Base application theme. -->
    <style name=".Digicade" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>



    <style name="Digicade.Button" parent="Base.TextAppearance.AppCompat.Button">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:padding">@dimen/padding_size</item>
    </style>



    <style name="Digicade.Titulo" parent=".Digicade">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <style name="Digicade.Detalhe.Titulo" parent=".Digicade">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/font_size_descricao</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Digicade.Detalhe.Label" parent=".Digicade">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/font_size_descricao</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Digicade.Detalhe.Descricao" parent=".Digicade">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/font_size_descricao</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Digicade.ItemOs.Titulo" parent=".Digicade">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/font_size_descricao</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Digicade.ItemOs.Descricao" parent=".Digicade">
        <!-- Customize your theme here. -->
        <item name="android:layout_margin">@dimen/margin_size_descricao</item>
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:textSize">@dimen/font_size_descricao</item>
    </style>

    <style name="Digicade.ItemOs.Descricao.Status" parent=".Digicade">
        <!-- Customize your theme here. -->
        <item name="android:layout_margin">@dimen/margin_size_descricao</item>
        <item name="android:textSize">@dimen/font_size_descricao</item>
        <item name="android:singleLine">true</item>
    </style>



    <style name="Digicade.TitleBarTextColor" parent=".Digicade">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/padding_size</item>
    </style>





</resources>
