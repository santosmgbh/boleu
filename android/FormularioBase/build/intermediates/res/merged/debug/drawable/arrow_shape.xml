<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" android:radius="3dp">
            <size
                android:width="400dp"
                android:height="40dp" />
            <solid android:color="@color/white" />
            <corners android:radius="3dp"/>
        </shape>
    </item>

    <item
        android:top="-115dp"
        android:bottom="15dp"
        android:radius="3dp"
        android:right="-75dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#cfcfcf" />
            </shape>
        </rotate>
    </item>

    <item
        android:top="15dp"
        android:radius="3dp"
        android:bottom="-115dp"
        android:right="-75dp">
        <rotate
            android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <solid android:color="#cfcfcf" />
            </shape>
        </rotate>
    </item>

</layer-list>