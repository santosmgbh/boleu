<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="1dp"
    android:baselineAligned="false">


    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/autoComplete"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:completionHint="@string/KEY_DIGITE_O_TEXTO_DA_LISTA"
            android:completionThreshold="1"
            android:hint="@string/KEY_DIGITE_O_TEXTO_DA_LISTA"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="@dimen/questionario_texto" />

        <Button
            android:id="@+id/btnPesquisar"
            android:layout_alignParentRight="true"
            android:layout_height="30dp"
            android:layout_width="35dp"
            android:paddingLeft="8dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_green_light"
            android:drawableLeft="@drawable/find_white"

            android:gravity="center_vertical|center_horizontal"
            android:foregroundGravity="center_vertical|center_horizontal" />
    </RelativeLayout>

</LinearLayout>