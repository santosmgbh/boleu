<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Formulario" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
    </style>


    <declare-styleable name="AppTheme.Theme.Digicade">
        <attr name="styleDescricao" format="reference" />
        <attr name="styleBtnExcluir" format="reference" />
        <attr name="styleCheckNsNrNA" format="reference" />
        <attr name="styleTextErroValidacao" format="reference" />

    </declare-styleable>

    <style name="AppTheme.Theme.Digicade.Formulario.Questao" parent="AppTheme.Formulario">
        <item name="styleDescricao">@style/AppTheme.Theme.Digicade.Formulario.Questao.Descricao</item>
        <item name="styleBtnExcluir">@style/AppTheme.Theme.Digicade.Formulario.Questao.BtnExcluir</item>
        <item name="styleCheckNsNrNA">@style/AppTheme.Theme.Digicade.Formulario.Questao.CheckNsNrNa</item>
        <item name="styleTextErroValidacao">@style/AppTheme.Theme.Digicade.Formulario.Questao.ErroValidacao</item>
    </style>

    <style name="AppTheme.Theme.Digicade.Formulario.BarraNavegacao" parent="AppTheme.Theme.Digicade.Formulario.Questao">
        <item name="android:background">#748f3c</item>
    </style>
    <style name="AppTheme.Theme.Digicade.Formulario.Questao.Descricao" parent="AppTheme.Theme.Digicade.Formulario.Questao">
        <item name="android:textAppearance">@style/AppTheme.Theme.Digicade.Formulario.Questao.TextAppearance</item>
    </style>
    <style name="AppTheme.Theme.Digicade.Formulario.Questao.TextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">100sp</item>
    </style>
    <style name="AppTheme.Theme.Digicade.Formulario.Questao.ErroValidacao" parent="Base.TextAppearance.AppCompat">
    </style>
    <!--<style name="AppTheme.Arvore.Atributo.Botao" parent="Base.TextAppearance.AppCompat">-->
        <!--<item name="android:background">@color/white</item>-->
        <!--<item name="android:textColor">@color/laranja</item>-->
    <!--</style>-->
    <style name="AppTheme.Theme.Digicade.Formulario.Questao.BtnExcluir" parent="Base.TextAppearance.AppCompat.Button">
    </style>
    <style name="AppTheme.Theme.Digicade.Formulario.Questao.CheckNsNrNa" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
    </style>
    <style name="AppTheme.Theme.Digicade.Formulario.Botao" parent="Base.TextAppearance.AppCompat">
        <item name="android:background">@drawable/btn_white</item>
        <item name="android:textColor">@color/laranja</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>